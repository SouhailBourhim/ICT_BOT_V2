# Configuration du syst√®me RAG INPT Smart ICT

# === Informations Projet ===
PROJECT_NAME="Assistant √âducatif RAG - INPT Smart ICT"
VERSION="1.0.0"
LANGUAGE="fr"

# === Chemins (relatifs au projet) ===
DATA_DIR="./data"
DOCUMENTS_DIR="./data/documents"
PROCESSED_DIR="./data/processed"
DATABASE_DIR="./database"
LOGS_DIR="./logs"

# === Document Processing ===
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
SUPPORTED_FORMATS=[".pdf", ".txt", ".md", ".docx"]

# === Embeddings ===
# Mod√®les recommand√©s:
# - sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2 (384 dim, rapide)
# - sentence-transformers/paraphrase-multilingual-mpnet-base-v2 (768 dim, meilleur qualit√©)
EMBEDDING_MODEL="sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2"
EMBEDDING_DIMENSION=384
BATCH_SIZE=32

# === ChromaDB ===
CHROMA_PERSIST_DIR="./database/chroma_db"
CHROMA_COLLECTION_NAME="inpt_smart_ict_docs"

# === SQLite ===
SQLITE_DB_PATH="./database/metadata.db"

# === Retrieval ===
TOP_K_RETRIEVAL=7
SIMILARITY_THRESHOLD=0.4
BM25_WEIGHT=0.3
SEMANTIC_WEIGHT=0.7
RERANK_TOP_K=3

# === Ollama LLM ===
# For local development
OLLAMA_BASE_URL="http://localhost:11434"
# For Docker deployment (use service name)
# OLLAMA_BASE_URL="http://ollama:11434"

# Mod√®les disponibles: qwen2.5:3b, llama3.2:3b, mistral:7b, etc.
OLLAMA_MODEL="qwen2.5:3b"
OLLAMA_TIMEOUT=180
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=500

# === Conversation ===
MAX_CONVERSATION_HISTORY=6
CONTEXT_WINDOW_SIZE=4096

# === Query Enhancement ===
ENABLE_SPELLING_CORRECTION=true
ENABLE_QUERY_EXPANSION=true

# === Analytics ===
ENABLE_TRACKING=true
ENABLE_METRICS=true

# === Streamlit ===
STREAMLIT_PAGE_TITLE="Assistant RAG - INPT Smart ICT"
STREAMLIT_PAGE_ICON="üéì"
STREAMLIT_LAYOUT="wide"

# === Docker-specific Streamlit Configuration ===
# Uncomment for production Docker deployment
# STREAMLIT_SERVER_MAX_UPLOAD_SIZE=200
# STREAMLIT_SERVER_ENABLE_CORS=false
# STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=true

# === Logging ===
LOG_LEVEL="INFO"
# Niveaux: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT="<green>{time:YYYY-MM-DD HH:mm:ss}</green> | <level>{level: <8}</level> | <cyan>{name}</cyan>:<cyan>{function}</cyan> - <level>{message}</level>"

# === Performance ===
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600

# === Docker Configuration ===
# Container resource limits (for production)
# OLLAMA_NUM_PARALLEL=4
# OLLAMA_MAX_LOADED_MODELS=2

