# Configuration du syst√®me RAG INPT Smart ICT

# === Informations Projet ===
PROJECT_NAME="Assistant √âducatif RAG - INPT Smart ICT"
VERSION="1.0.0"
LANGUAGE="fr"

# === Chemins (relatifs au projet) ===
DATA_DIR="./data"
DOCUMENTS_DIR="./data/documents"
PROCESSED_DIR="./data/processed"
DATABASE_DIR="./database"
LOGS_DIR="./logs"

# === Document Processing ===
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MIN_CHUNK_SIZE=100
SUPPORTED_FORMATS=[".pdf", ".txt", ".md", ".docx"]

# === Embeddings ===
# Mod√®les recommand√©s:
# - paraphrase-multilingual-MiniLM-L12-v2 (384 dim, rapide)
# - paraphrase-multilingual-mpnet-base-v2 (768 dim, meilleur qualit√©)
EMBEDDING_MODEL="paraphrase-multilingual-MiniLM-L12-v2"
EMBEDDING_DIMENSION=384
BATCH_SIZE=32

# === ChromaDB ===
CHROMA_PERSIST_DIR="./database/chroma_db"
CHROMA_COLLECTION_NAME="inpt_smart_ict_docs"

# === SQLite ===
SQLITE_DB_PATH="./database/metadata.db"

# === Retrieval ===
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.7
BM25_WEIGHT=0.3
SEMANTIC_WEIGHT=0.7
RERANK_TOP_K=5

# === Ollama LLM ===
OLLAMA_BASE_URL="http://localhost:11434"
# Mod√®les disponibles: llama3.2:3b, mistral:7b, etc.
OLLAMA_MODEL="llama3.2:3b"
OLLAMA_TIMEOUT=120
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# === Conversation ===
MAX_CONVERSATION_HISTORY=10
CONTEXT_WINDOW_SIZE=4096

# === Query Enhancement ===
ENABLE_SPELLING_CORRECTION=true
ENABLE_QUERY_EXPANSION=true

# === Analytics ===
ENABLE_TRACKING=true
ENABLE_METRICS=true

# === Streamlit ===
STREAMLIT_PAGE_TITLE="Assistant RAG - INPT Smart ICT"
STREAMLIT_PAGE_ICON="üéì"
STREAMLIT_LAYOUT="wide"

# === Logging ===
LOG_LEVEL="INFO"
# Niveaux: DEBUG, INFO, WARNING, ERROR, CRITICAL

# === Performance ===
MAX_WORKERS=4
CACHE_ENABLED=true
CACHE_TTL=3600